{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@ipc/*": [
        "*"
      ]
    },
    "plugins": [
      {"transform": "typescript-transform-paths"}
    ]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "./tests/"
  ]
}
